<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/bg_e6_r12_shape"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:paddingEnd="16dp"
            android:paddingStart="16dp">
            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="vst"
                android:textSize="17sp" />
            <ImageView
                android:id="@+id/iv_del_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:src="@drawable/picture_icon_black_delete" />
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_od"
                android:layout_width="match_parent"
                android:layout_height="53dp"
                android:layout_weight="1"
                tools:text="右眼OD"
                android:text="右眼OD"
                android:textSize="22sp"
                android:layout_marginTop="0dp"
                android:gravity="center"
                android:background="@drawable/bg_0ff_topleft_r12_shape" />
            <TextView
                android:id="@+id/tv_os"
                android:layout_width="match_parent"
                android:layout_height="53dp"
                android:layout_weight="1"
                tools:text="左眼OS"
                android:text="左眼OS"
                android:textSize="22sp"
                android:gravity="center"
                android:background="@drawable/bg_bfd_topright_r12_shape" />
        </LinearLayout>

    </LinearLayout>

</layout>